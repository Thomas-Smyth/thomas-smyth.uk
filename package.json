{
  "name": "thomas-smyth.uk",
  "version": "0.0.0",
  "repository": "https://github.com/Thomas-Smyth/thomas-smyth.uk.git",
  "author": "Thomas Smyth <https://github.com/Thomas-Smyth>",
  "license": "BSL-1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --fix . && prettier --write \"./**/*.{js,ts}\"",
    "start": "ts-node index.ts",
    "dev": "nodemon index.ts"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  },
  "lint-staged": {
    "*": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@tsconfig/node16": "^1.0.1",
    "@types/node": "^16.9.1",
    "koa": "^2.13.1",
    "koa-helmet": "^6.1.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-subdomain": "^3.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.27.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1"
  }
}
